<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:id="@+id/lyImagen">

        <ImageView
            android:id="@+id/imgvFoto"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ping"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbLike"
            android:background="@drawable/bone_48"
            android:paddingRight="@dimen/right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreCV"
            android:text="@string/pnombre"
            android:textSize="@dimen/nombre_cardview"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgbLike"
            android:layout_toEndOf="@+id/imgbLike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/tvRatingCV"
            android:text="@string/prating"
            android:textSize="@dimen/rating_cardview"
            android:textStyle="bold"
            android:paddingRight="@dimen/right"

            android:layout_alignTop="@+id/tvNombreCV"
            android:layout_toLeftOf="@+id/imgvBoneFilled"
            android:layout_toStartOf="@+id/imgvBoneFilled" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgvBoneFilled"
            android:src="@drawable/bone_filled_48"
            android:layout_alignTop="@+id/tvNombreCV"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
