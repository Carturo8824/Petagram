<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carturo8824.petagram.Acerca"
    android:orientation="vertical">

    <include android:id="@+id/miActionBarAcerca"
        layout="@layout/actionbar"></include>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cat_head_1821212"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:id="@+id/imgFotoAcerca"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombreAcerca"
            android:text="Cristy Arturo"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingLeft="@dimen/right"
            android:paddingTop="@dimen/padding"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programador. "
        android:paddingTop="@dimen/padding"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingeniero en Sistemas Computacionales. "
        android:paddingTop="@dimen/padding"/>





</LinearLayout>
